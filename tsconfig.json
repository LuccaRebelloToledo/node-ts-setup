{
  "compilerOptions": {
    // Basic Options
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["es5", "es6", "ES2023"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceRoot": "/",
    "forceConsistentCasingInFileNames": true,

    // Strict Checks
    "strict": true,
    "strictPropertyInitialization": false,

    // Additional Checks
    "allowUnreachableCode": false,
    "skipLibCheck": true,

    // Experimental Options
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Debugging Options
    "sourceMap": true,
    "inlineSources": true
  },

  // ts-node
  "ts-node": {
    "files": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}